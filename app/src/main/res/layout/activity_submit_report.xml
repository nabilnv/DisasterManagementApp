<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Type of Hazard -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Hazard"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- First Row of Hazard Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Tsunami -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTsunami"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                app:cardPreventCornerOverlap="false"
                android:contextClickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tsunami"
                        android:contentDescription="Tsunami" />

                    <TextView
                        android:id="@+id/textTsunami"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tsunami"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Flood -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFlood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_flood"
                        android:contentDescription="Flood" />

                    <TextView
                        android:id="@+id/textFlood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flood"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Second Row of Hazard Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Landslide -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLandslide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_landslide"
                        android:contentDescription="Landslide" />

                    <TextView
                        android:id="@+id/textLandslide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landslide"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Haze -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHaze"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_haze"
                        android:contentDescription="Haze" />

                    <TextView
                        android:id="@+id/textHaze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haze"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Severity Level -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Severity Level"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Severity Level Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Minor -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMinor"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMinor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minor"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Moderate -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardModerate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textModerate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Severe -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSevere"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textSevere"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Severe"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Description and Location Inputs -->
        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell us what happened in detail"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Where, Genting Highland"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit Report" />
    </LinearLayout>
</ScrollView>
